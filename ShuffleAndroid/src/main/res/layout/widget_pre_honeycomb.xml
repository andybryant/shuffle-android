            <TextView
                android:id="@+id/project_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/contextColour_3"
                android:paddingLeft="10dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:duplicateParentState="true"
                style="@style/prehoneycomb_widget_project" />

            <TextView
                android:id="@+id/description_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/contextColour_3"
                android:layout_below="@+id/project_3"
                android:paddingLeft="10dip"
                android:layout_alignParentLeft="true"
                android:duplicateParentState="true"
                style="@style/prehoneycomb_widget_description" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/divider_3"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:src="@drawable/divider_horizontal_bright"
            android:layout_below="@+id/entry_3" />

        <RelativeLayout
            android:id="@+id/entry_4"
