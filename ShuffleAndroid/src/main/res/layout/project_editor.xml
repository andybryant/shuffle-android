<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/white"
        android:fadingEdge="none"
        android:animateLayoutChanges="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:minHeight="72dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_1"
                android:layout_marginRight="16dp"
                android:hint="@string/context_name_title"
                android:tag="regular"
                android:autoText="true"
                android:singleLine="true"
                android:maxLength="50"
                android:background="@null"
                android:inputType="textAutoCorrect|textCapSentences">

                <requestFocus />
            </EditText>

        <View style="@style/EditDivider"
            android:layout_marginLeft="0dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/ic_directions_black_24dp"
                style="@style/EditEntryIcon"
                />

            <RelativeLayout
                android:id="@+id/parallel_entry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:paddingRight="?android:attr/scrollbarSize"
                android:background="@drawable/list_selector_background"
                android:focusable="true"
                android:clickable="true">

                <ImageView
                    android:id="@+id/parallel_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:duplicateParentState="true" />


                <TextView
                    android:id="@+id/parallel_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/parallel_icon"
                    android:layout_centerVertical="true"
                    android:text="@string/sequence_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/label_color"
                    android:maxLines="2"
                    android:duplicateParentState="true"
                    android:paddingLeft="8dip" />

            </RelativeLayout>

        </LinearLayout>

        <View style="@style/EditDivider"
            android:layout_marginLeft="0dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/ic_label_black_24dp"
                style="@style/EditEntryIcon"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/default_context_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dip"
                    android:paddingRight="4dip"
                    android:text="@string/default_context_title"
                    style="@style/LabelTextViewStyle" />


                <Spinner
                    android:id="@+id/default_context"
                    android:layout_width="fill_parent"
                    android:layout_height="48dip" />

            </LinearLayout>

        </LinearLayout>

        <View style="@style/EditDivider" />

        <include
            layout="@layout/editor_active_entry"
            android:id="@+id/active_row" />

        </LinearLayout>

    </ScrollView>

    <View style="@style/EditDivider"
        android:layout_marginLeft="0dp"
        />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:tag="allcaps"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:text="@string/delete_completed_button_title"
        android:textColor="@color/label_color"
        style="?android:attr/borderlessButtonStyle"
        />

</LinearLayout>
